/* pages/rank/rank.wxss */
page {
    background-color: #f7f8fa;
}

.card {
    margin: 40rpx;
    background-color: #fff;
    border-radius: 20rpx;
    box-shadow: 0 8rpx 12rpx #ebedf0;
    margin-bottom: 24rpx;
    padding: 24rpx;
    color: #000;
}

.cardTop {
    position: relative;
    height: 100px;
}

.rankText {
    float: left;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -15px;
    margin-left: -25px;
}

.rank {
    margin-left: 40rpx;
    margin-right: 80rpx;
}

.core {
    float: right;
    text-align: right;
    margin-right: 40rpx;
}

.page-box {
    background-color: #fff;
    margin-top: 10px;
}

.page-box .myList {
    height: 100rpx;
    line-height: 100rpx;
    padding: 10rpx;
    border-bottom: 1px solid #e3e5e9;  
}